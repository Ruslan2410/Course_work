<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Course_work.AddProduct"		
		xmlns:vm="using:Course_work.ViewModels"
		x:DataType="vm:AddProductViewModel"	
        Title="AddProduct">
	
	<Grid ColumnDefinitions="160, 3, Auto"
				  RowDefinitions="Auto,Auto,Auto,Auto,Auto, *"
					 Margin="15,20,20,0">

		<TextBlock Grid.Column="0"
		   Grid.Row="0"
		   HorizontalAlignment="Right"> Product Name: </TextBlock>
		<TextBlock Grid.Column="0"
		   Grid.Row="1"
		   HorizontalAlignment="Right"> Category: </TextBlock>
		<TextBlock Grid.Column="0"
		   Grid.Row="2"
		   HorizontalAlignment="Right"> Unit Price: </TextBlock>
		<TextBlock Grid.Column="0"
		   Grid.Row="3"
		   HorizontalAlignment="Right"> Quantity in Stock: </TextBlock>

		<TextBox x:Name="tName"
		   Text="{Binding Name}"
		   Grid.Column="2"
		   Margin="0,0,0,3"
		   Grid.Row="0"
		   Width="150"
		   HorizontalAlignment="Left"/>
		<TextBox x:Name="tCategory"
		   Text="{Binding Category}"
		   Grid.Column="2"
		   Margin="0,0,0,3"
		   Grid.Row="1"
		   Width="150"
		   HorizontalAlignment="Left"/>
		<TextBox x:Name="tPrice"
		   Text="{Binding Price}"
		   Grid.Column="2"
		   Margin="0,0,0,3"
		   Grid.Row="2"
		   Width="150"
		   HorizontalAlignment="Left"/>
		<TextBox x:Name="tQuantity"
		   Text="{Binding Quantity}"
		   Grid.Column="2"
		   Margin="0,0,0,3"
		   Grid.Row="3"
		   Width="150"
		   HorizontalAlignment="Left"/>

		<Button x:Name="bCancel"
				Height="28"
				Margin="10,0,0,15"
				VerticalAlignment="Bottom"
				HorizontalAlignment="Stretch"
				HorizontalContentAlignment="Center"
				Grid.Column="0"
				Grid.Row="5">
			Cancel
		</Button>
		<Button x:Name="bSaveProduct"
				Height="28"
				Margin="10,0,0,15"
				VerticalAlignment="Bottom"
				HorizontalAlignment="Stretch"
				HorizontalContentAlignment="Center"
				Command="{Binding SaveProduct}"
				Grid.Column="2"
				Grid.Row="5">
			Save Product
		</Button>
	</Grid>
</Window>
